#!/usr/bin/with-contenv bash

# make folders
mkdir -p \
    /config/media \
    /run/obico

if [ ! -f "/.setup" ]; then
    echo "Initialising Obico"
    cd /app/obico/backend

    python3.7 manage.py migrate >/dev/null
    python3.7 manage.py collectstatic -v 2 --noinput >/dev/null

    touch "/.setup"
fi

# permissions
chown -R abc:abc \
    /config \
    /app \
    /run/obico
